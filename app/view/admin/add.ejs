<!DOCTYPE html>
<html lang="pt">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Jogo da Forca</title>
		<link rel="stylesheet" href="/dist/css/bootstrap.min.css">
		<link rel="stylesheet" href="/css/add.css">
	</head>
	<body>
		<div class="container">
			<div class="row">
			  <div class="col col-6">
					<form method="POST" action="create" class="formlogin">
						<img src="/img/logo.png" style="display:block;margin-left: auto;margin-right: auto;width:65%;">
						<input type="text" name="palavra" id="palavra" placeholder="Digite uma palavra para o jogo da forca" class="form-control">
						<button class="btn btn-dark btn-lg w-100" id="CreateWord">Cadastrar Palavra</button>
					</form>
				</div>
			  <div class="col col-6 col-md4" id="WordList">
					<ul class="WordList">
						<% wordS.forEach(word => { %>
						<li>
							<form method="POST" action="delete">
								<div class="row">
									<div class="col col-9">
										<input type="text" name="palavra" id="palavra" hidden value=<%= word.palavra %>>
										<input type="text" name="palavra" id="palavra" hidden value=<%= word.id %>>
										<input type="text" class="form-control" disabled="" value=<%= word.palavra %>>
									</div>
									<div class="col col-3">
										<button class="btn btn-danger btn-lg botao_lista">Deletar</button>
									</div>
								</div>
							</form>
						</li>
						<% }) %>
					</ul>
			  </div>
			</div>
		</div>
	</body>
  <script src="/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/dist/js/reconnecting-websocket.min.js"></script>
	<script src="/js/connection.js"></script>
	<script src="/js/lobby.js"></script>
</html>